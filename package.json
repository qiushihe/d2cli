{
  "name": "d2cli",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rimraf dist .rollup.cache .bin",
    "build": "npm-run-all clean build:rollup build:nexe",
    "build:nexe": "npm-run-all build:nexe:linux build:nexe:macos build:nexe:windows",
    "build:nexe:linux": "nexe --input ./dist/d2cli.cjs --target linux-x64-14.15.3 --output ./.bin/d2cli-linux",
    "build:nexe:macos": "nexe --input ./dist/d2cli.cjs --target mac-x64-14.15.3 --output ./.bin/d2cli-macos",
    "build:nexe:windows": "nexe --input ./dist/d2cli.cjs --target windows-x64-14.15.3 --output ./.bin/d2cli-windows.exe",
    "build:rollup": "rollup --config ./rollup.config.js",
    "build:tsc": "tsc --project tsconfig.json",
    "build:tsc:alias": "tsc-alias --project tsconfig.json",
    "test": "npm-run-all test:tsc test:lint test:unit",
    "test:tsc": "tsc --noemit --skipLibCheck",
    "test:lint": "eslint --ext .js --ext .ts ./src ./test ./type",
    "test:lint:fix": "eslint --ext .js --ext .ts --fix ./src ./test ./type",
    "test:unit": "jest --config jest.config.json --runInBand --logHeapUsage"
  },
  "devDependencies": {
    "@jest/globals": "^29.3.1",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/node": "^18.11.17",
    "@types/node-fetch": "^2.6.2",
    "@types/opener": "^1.4.0",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "base64-js": "^1.5.1",
    "commander": "^9.4.1",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "jest": "^29.3.1",
    "nexe": "^4.0.0-rc.4",
    "node-fetch": "^2.6.7",
    "npm-run-all": "^4.1.5",
    "opener": "^1.5.2",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "rollup": "^3.20.0",
    "ts-jest": "^29.0.3",
    "tslib": "^2.5.0",
    "typescript": "^4.9.4"
  }
}

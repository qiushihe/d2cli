{
  "name": "d2cli",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm-run-all build:clean build:tsc build:tsc-alias",
    "build:clean": "rimraf dist",
    "build:tsc": "tsc --project tsconfig.json",
    "build:tsc-alias": "tsc-alias --project tsconfig.json",
    "test": "npm-run-all test:tsc test:lint test:unit",
    "test:tsc": "tsc --noemit --skipLibCheck",
    "test:lint": "eslint --ext .js --ext .ts --ext .tsx ./src ./test ./type",
    "test:lint:fix": "eslint --ext .js --ext .ts --ext .tsx --fix ./src ./test ./type",
    "test:unit": "jest --config jest.config.json --runInBand --logHeapUsage",
    "console": "npm-run-all build console:run",
    "console:run": "node dist/src/cli/console.js"
  },
  "dependencies": {
    "base-x": "^4.0.0",
    "base64-js": "^1.5.1",
    "chalk": "^5.2.0",
    "commander": "^9.4.1",
    "date-fns": "^2.29.3",
    "node-fetch": "^2.6.7",
    "opener": "^1.5.2",
    "ora": "^6.1.2",
    "protocol-registry": "^1.3.16",
    "table": "^6.8.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.3.1",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.11.17",
    "@types/node-fetch": "^2.6.2",
    "@types/opener": "^1.4.0",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "jest": "^29.3.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "tsc-alias": "^1.8.2",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.4"
  },
  "bin": {
    "d2cli": "bin/d2cli.js"
  }
}

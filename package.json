{
  "name": "d2cli",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rimraf dist .rollup.cache .bin",
    "compile": "npm-run-all clean rollup:build compile:pkg",
    "compile:pkg": "pkg --targets node16-linux-arm64,node16-linux-x64,node16-macos-arm64,node16-macos-x64,node16-win-arm64,node16-win-x64 --out-path ./.bin ./dist/d2cli.cjs",
    "rollup": "npm-run-all clean rollup:build",
    "rollup:build": "rollup --config ./rollup.config.js",
    "build": "npm-run-all clean build:tsc build:tsc-alias",
    "build:tsc": "tsc --project tsconfig.json",
    "build:tsc-alias": "tsc-alias --project tsconfig.json",
    "test": "npm-run-all test:tsc test:lint test:unit",
    "test:tsc": "tsc --noemit --skipLibCheck",
    "test:lint": "eslint --ext .js --ext .ts ./src ./test ./type",
    "test:lint:fix": "eslint --ext .js --ext .ts --fix ./src ./test ./type",
    "test:unit": "jest --config jest.config.json --runInBand --logHeapUsage"
  },
  "dependencies": {
    "base64-js": "^1.5.1",
    "commander": "^9.4.1",
    "node-fetch": "^2.6.7",
    "opener": "^1.5.2",
    "table": "^6.8.1",
    "tslib": "^2.5.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.3.1",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/node": "^18.11.17",
    "@types/node-fetch": "^2.6.2",
    "@types/opener": "^1.4.0",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "jest": "^29.3.1",
    "npm-run-all": "^4.1.5",
    "pkg": "^5.8.1",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "rollup": "^3.20.0",
    "ts-jest": "^29.0.3",
    "tsc-alias": "^1.8.2",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.4"
  }
}
